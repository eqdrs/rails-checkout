<h1 class="ls-title-intro ls-ico-plus">Cadastrar pedido</h1>
<% if @order.errors.any? %>
  <% @order.errors.full_messages.each do |msg| %>
  <p><%= msg %></p>
  <% end %>
<% end %>

<div>
<h1><%= @individual.name %></h1>
<ul>
  <li>E-mail: <%= @individual.email %></li>
  <li>EndereÃ§o: <%= @individual.address %></li>
  <li>CPF: <%= @individual.formatted_cpf %></li>
  <li>Telefone: <%= @individual.phone %></li>
</ul>

<%= form_with model: @order, url: customer_orders_path(@individual), class: "ls-form row", local: true do |f|%>
  <fieldset>
  <div class="ls-label col-md-2 col-sm-4">
  <%= f.label :product_id, 'Produto', class: "ls-label-text"%>
  <div class="ls-custom-select">
  <%= f.collection_select :product_id, Product.all, :id, :name, class: "ls-select"%>
  </div>
  </div>
  </fieldset>
  <div class="ls-actions-btn">
  <%= f.submit 'Cadastrar', class: "ls-btn" %>
  </div>
<% end %>