<h1 class="ls-title-intro ls-ico-plus">Cadastrar pedido</h1>
<% if @order.errors.any? %>
  <% @order.errors.full_messages.each do |msg| %>
  <p><%= msg %></p>
  <% end %>
<% end %>
<%= form_with model: @order, class: "ls-form row", local: true do |f|%>
  <fieldset>
    <div class="ls-label col-md-3">
      <h4><%= f.label :cpf, 'CPF', class: "ls-label-text" %></h4>
      </br>
      <%= f.text_field :cpf, class: 'form-control col-md-2', placeholder: '_____._____._____-____', data: {mask: '999.999.999-99'} %>
    </div>
    <div class="ls-label col-md-12 col-sm-4">
      <h5>PRODUTOS</h5>
      </br>
      <div class="ls-box" style="height: 276px; overflow-y: scroll;">
        <% Product.all.each do |product| %>
          <div class="ls-box ls-md-space">
          <div class="row">
            <div class="col-md-2 ls-txt-center">
            <span class="ls-ico-alone ls-ico-screen"></span>
            </div>
            <div class="col-md-10">
              <h3 class="ls-title-5"><strong>
              <%= f.radio_button :product_id, product.name %>
              <%= f.label :product_id, product.name, class: "inline" %>
              </strong></h3>
              <p><strong>Pre√ßo:</strong> R$ <%= sprintf('%.2f', product.price) %></p>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </fieldset>
  <div class="ls-actions-btn">
    <%= f.submit 'Cadastrar', class: "ls-btn" %>
  </div>
<% end %>